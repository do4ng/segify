{
  "private": true,
  "workspaces": [
    "packages/**/*",
    "playground"
  ],
  "devDependencies": {
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.7.3",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitest/coverage-v8": "^2.0.4",
    "@vitest/ui": "^2.0.4",
    "esbuild": "^0.18.14",
    "esbuild-node-externals": "^1.8.0",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "get-tsconfig": "^4.7.6",
    "glob": "^11.0.0",
    "sass": "^1.77.8",
    "typescript": "^5.5.4",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.4"
  },
  "scripts": {
    "build": "node -r @swc-node/register scripts/build.ts --dts && yarn build:browser && yarn build:run",
    "build:browser": "node -r @swc-node/register scripts/browser.ts",
    "build:run": "node -r @swc-node/register scripts/run.ts",
    "build:dts": "node -r @swc-node/register scripts/build.ts --dts",
    "dev": "yarn workspace playground dev",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint-fix": "eslint --fix --ext .js,.ts ."
  },
  "version": "0.0.0"
}
